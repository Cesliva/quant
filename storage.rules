rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Avatars - authenticated users can upload their own, anyone can read
    match /avatars/{companyId}/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Company branding (logos) - authenticated users can upload, anyone can read
    match /companies/{companyId}/branding/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Project files - authenticated users can read/write
    match /projects/{companyId}/{projectId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // General uploads fallback - authenticated users only
    match /{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
  }
}

